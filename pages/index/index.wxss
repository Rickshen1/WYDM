/**index.wxss**/
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: left;
}

.button{
    background-color: #e7e7e7; /* Green */
    border: none;
    width:220px;
    display: inline-block;
    color:black;
    border-radius: 12px;
    
}
.buttonFlex {
  display: flex;
  flex-direction: row;
  align-items: left;
  height:40%;
  align-content: left;
}

.buttonText {
  align-items: left;
  color: #AAA;
  font-size: 10px;
  height: 40%;
  text-align:left;
  align-content: left;
  float:left;
  margin: 20rpx;   
}

.columnFlex {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.line{
  margin-top: 20rpx;
}